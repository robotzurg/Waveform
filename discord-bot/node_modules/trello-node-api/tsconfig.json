{
    "compilerOptions": {
        "declaration": true,
        "inlineSources": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "target": "es5",
        "lib": [
            "es2015"
        ],
        "types": [
            "mocha",
            "node"
        ]
    },
    "rootDirs": [
        "src",
        "test"
    ]
}